<h1>books</h1>
<table>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book)%></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book),method: :delete, "data-confirm"=>"削除しますか？"%></td>
    </tr>
  <% end %>
</table>
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<% if @book.errors.any? %>
  <p><%= @book.errors.count %>件のerrorが発生しました</p>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>